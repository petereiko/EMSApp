@model EMSApp.EntityModels.Employee
@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<form action="Delete" method="post">
    @Html.HiddenFor(x=>x.Id)
    <table>
        <tr>
            <td>Email</td>
            <td>@Html.DisplayFor(x => x.Email)</td>
        </tr>
        <tr>
            <td>Phone</td>
            <td>@Html.DisplayFor(x => x.Phone)</td>
        </tr>
        <tr>
            <td>Salary</td>
            <td>@Html.DisplayFor(x => x.Salary)</td>
        </tr>
        <tr>
            <td>Address</td>
            <td>@Html.Raw(Model.Address)</td>
        </tr>
        <tr>
            <td></td>
            <td>
                <button type="submit" onclick="return confirm('Are you sure you want to delete this employee record?')" class="alert alert-danger">Delete</button>
            </td>
        </tr>
    </table>
</form>

<a href="@Url.Action("Index","Employee")">Employee List</a>